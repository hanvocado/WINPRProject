<UserControl x:Class="ThesisManagement.Views.Admin.ProfessorsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThesisManagement.Views.Admin"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:viewModel="clr-namespace:ThesisManagement.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <UserControl.DataContext>
        <viewModel:ProfessorsVM />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="120" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Top"
                        FlowDirection="LeftToRight">
                <fa:IconImage Icon="Search" 
                              Height="20" 
                              Width="20" 
              Foreground="{StaticResource plainTextColor}"/>
                <ComboBox Text="Đề tài..."   
                          FontSize="14"
                          Height="24"
                          Width="200"
                          Background="Transparent"
                          FontWeight="Medium"
                          FontFamily="Montserrat"
                          Foreground="{StaticResource plainTextColor}"
                          BorderBrush="{StaticResource plainTextColor}"
                          BorderThickness="0,0,0,1"
                          VerticalContentAlignment="Center"
                          Margin="5,5,0,0"> 
                </ComboBox>

                <Button Style="{StaticResource btnCruds}"
                        Tag="{StaticResource searchHover}"
                        Command=""
                        Background="{StaticResource searchNomal}"
                        Content="Tìm kiếm"
                        VerticalAlignment="Top">
                </Button>

            </StackPanel>

            <Button Grid.Column="1"
                    Style="{StaticResource btnCruds}"
                    Tag="{StaticResource createHover}"
                    Background="{StaticResource createNomal}"
                    Command=""                            
                    Content="Tạo mới"                            
                    VerticalAlignment="Top">
            </Button>
        </Grid>

        <!--Temporary for design-->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="90"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Tên"
                       FontSize="14"
                       FontWeight="Medium"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Row="1" Grid.Column="0"
                        Text="Nguyễn A"
                        FontSize="14"
                        VerticalAlignment="Center"/>

            <TextBlock Grid.Row="0" Grid.Column="1"
                        Text="Email"
                        FontSize="14"
                        FontWeight="Medium"
                        VerticalAlignment="Center"/>

            <TextBlock Grid.Row="1" Grid.Column="1"
                        Text="nguyena@hcmute.edu.vn"
                        FontSize="14"
                        VerticalAlignment="Center"/>
            
            <TextBlock Grid.Row="0" Grid.Column="2"
                        Text="Khoa"
                        FontSize="14"
                        FontWeight="Medium"
                        VerticalAlignment="Center"/>

            <TextBlock Grid.Row="1" Grid.Column="2"
                        Text="Công nghệ thông tin "
                        FontSize="14"
                        VerticalAlignment="Center"/>
            
            <TextBlock Grid.Row="0" Grid.Column="3"
                        Text="Số điện thoại"
                        FontSize="14"
                        FontWeight="Medium"
                        VerticalAlignment="Center"/>

            <TextBlock Grid.Row="1" Grid.Column="3"
                        Text="123456789"
                        FontSize="14"
                        VerticalAlignment="Center"/>

            <StackPanel Orientation="Horizontal"
                    Grid.Row="1" Grid.Column="5">

                <Button Style="{StaticResource btnCruds}"
                    Tag="{StaticResource deleteHover}"
                    Background="{StaticResource deleteNomal}"
                    VerticalAlignment="Top"
                    Width="50">
                    <fa:IconImage Icon="Trash" Style="{StaticResource iconCruds}" />
                </Button>

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
