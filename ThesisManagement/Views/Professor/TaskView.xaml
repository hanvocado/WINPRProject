            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Padding="30 0">
                    <StackPanel>
                        <TextBlock Text="Ngày bắt đầu nhiệm vụ"
                                    Style="{StaticResource label}" />
                        <DatePicker 
                              SelectedDate="{Binding Start, StringFormat=dd/MM/yyyy}"
                              BorderThickness="0.5" BorderBrush="LightGray"
                                Margin="0,0,0,0" Grid.Row="1" Height="35"/>

                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Padding="30 0">
                    <StackPanel>
                        <TextBlock Text="Ngày kết thúc nhiệm vụ"
                                    Style="{StaticResource label}" />
                        <DatePicker SelectedDate="{Binding End, StringFormat=dd/MM/yyyy}"
                                    Grid.Row="1" Height="35"/>
                    </StackPanel>
                </Border>

            </Grid>
            <Grid Grid.Row="6" >
                <customControls:ControlButton DefaultColor="{StaticResource primaryBrush}"
                          HoverColor="{StaticResource secondaryBrush}"
                          Content="Lưu"
                          Width="200"
                          Height="50"
                          FontSize="14"
                          Command="{Binding CreateOrUpdateCommand}"
                          CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            </Grid>

        </Grid>
