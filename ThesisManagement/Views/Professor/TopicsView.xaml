<UserControl x:Class="ThesisManagement.Views.Professor.TopicsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThesisManagement.Views.Professor"
             xmlns:viewModels="clr-namespace:ThesisManagement.ViewModels"
             xmlns:customControls="clr-namespace:ThesisManagement.CustomControls"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <UserControl.Resources>
        <viewModels:TopicsVM x:Key="TopicsVM"/>
        <viewModels:TopicVM x:Key="TopicVM"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" DataContext="{StaticResource TopicVM}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                        Orientation="Horizontal">
                <fa:IconImage Icon="Search"
                              Margin="0 5"
                              Height="17" 
                              Width="20"/>
                <TextBox Grid.Row="0"
                         Name="FilterTexbox"
                         TextChanged="FilterTexbox_TextChanged"
                         Text="{Binding Name}"
                         Width="200"
                         Padding="10"
                         Margin="5"
                         VerticalAlignment="Center"
                         md:HintAssist.Hint="Tên đề tài..."
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <ComboBox VerticalAlignment="Center"
                          Padding="10"
                          Margin="5"
                          Width="200"
                          ItemsSource="{Binding Categories}"
                          SelectedValue="{Binding Category}"
                          md:HintAssist.Hint="Thể loại..."
                          md:TextFieldAssist.HasClearButton="True"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}">
                </ComboBox>

                <ComboBox VerticalAlignment="Center"
                          Padding="10"
                          Margin="5"
                          Width="200"
                          ItemsSource="{Binding Technologies}"
                          SelectedValue="{Binding Technology}"
                          md:HintAssist.Hint="Công nghệ..."
                          md:TextFieldAssist.HasClearButton="True"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}">
                </ComboBox>

            </StackPanel>

            <StackPanel DataContext="{StaticResource TopicsVM}"
                        Grid.Row="0" Grid.Column="1"
                        VerticalAlignment="Center">
                <customControls:ControlButton DefaultColor="{StaticResource primaryBrush}"
                                               HoverColor="{StaticResource secondaryBrush}"
                                               Command="{Binding CreateCommand}"
                                               Width="80">
                    <customControls:ControlButton.Content>
                        <TextBlock Text="Tạo mới" Style="{StaticResource btnContent}"/>
                    </customControls:ControlButton.Content>
                </customControls:ControlButton>
            </StackPanel>

        </Grid>

        <Border Grid.Row="1" DataContext="{StaticResource TopicVM}">

            <ListView Grid.Row="1"
                      MouseLeftButtonUp="ListViewItem_Click"
                      Name="TopicListView"
                      ItemsSource="{Binding FilteredTopics}"
                      SelectedItem="{Binding SelectedTopic, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="340"
                                        DisplayMemberBinding="{Binding Name, Mode=TwoWay}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Đề tài" />
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="180"
                                        DisplayMemberBinding="{Binding Category, Mode=TwoWay}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Thể loại" />
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="200"
                                        DisplayMemberBinding="{Binding Technology, Mode=TwoWay}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Công nghệ" />
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <customControls:ControlButton DefaultColor="{StaticResource danger}"
                                                                  HoverColor="{StaticResource dangerHover}"
                                                                  Width="30"
                                                                  DataContext="{StaticResource TopicVM}"
                                                                  Command="{Binding DeleteCommand}">
                                        <customControls:ControlButton.Content>
                                            <fa:IconImage Icon="Trash" Style="{StaticResource btnIcon}" />
                                        </customControls:ControlButton.Content>
                                    </customControls:ControlButton>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <EventSetter Event="MouseEnter" Handler="ListViewItem_MouseEnter" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

        </Border>

    </Grid>
</UserControl>
