<UserControl x:Class="ThesisManagement.Views.Professor.TopicsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThesisManagement.Views.Professor"
             xmlns:viewModels="clr-namespace:ThesisManagement.ViewModels"
             xmlns:customControls="clr-namespace:ThesisManagement.CustomControls"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             x:Name="topicsUC"
             d:DesignHeight="450" d:DesignWidth="1000"
             Background="White">
    <UserControl.DataContext>
        <viewModels:TopicsViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="1"
                        VerticalAlignment="Center">
                <customControls:ControlButton DefaultColor="{StaticResource primaryBrush}"
                                               HoverColor="{StaticResource secondaryBrush}"
                                               Command="{Binding ProfessorCreateTopic}"
                                              CommandParameter="{Binding ElementName=topicsUC}"
                                               Width="80">
                    <customControls:ControlButton.Content>
                        <TextBlock Text="+Tạo mới" Style="{StaticResource btnContent}"/>
                    </customControls:ControlButton.Content>
                </customControls:ControlButton>
            </StackPanel>

        </Grid>

        <Border Grid.Row="1" >

            <ListView Grid.Row="1"
      Name="AdminsListView"
      ItemsSource="{Binding Topics}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="160"
                            DisplayMemberBinding="{Binding Name}" >
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Đề tài" />
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="160"
                            DisplayMemberBinding="{Binding Category}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Thể loại" />
                            </GridViewColumn.Header>
                        </GridViewColumn>

                        <GridViewColumn Width="160"
                        DisplayMemberBinding="{Binding Technology}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Công nghệ" />
                            </GridViewColumn.Header>
                        </GridViewColumn>

                        <GridViewColumn Width="140"
                        DisplayMemberBinding="{Binding Professor.Name}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Giảng viên" />
                            </GridViewColumn.Header>
                        </GridViewColumn>

                        <GridViewColumn Width="160"
                        DisplayMemberBinding="{Binding Professor.Name}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Số lượng thành viên" />
                            </GridViewColumn.Header>
                        </GridViewColumn>

                        <GridViewColumn Width="140"
                        DisplayMemberBinding="{Binding }">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Trạng thái" />
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="140">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <customControls:ControlButton DefaultColor="{StaticResource danger}"
                                            HoverColor="{StaticResource dangerHover}"
                                            Width="30"
                                            Margin="5 0 0 0"
                                            Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=ListView}}">
                                            <customControls:ControlButton.Content>
                                                <fa:IconImage Icon="Trash" Style="{StaticResource btnIcon}" />
                                            </customControls:ControlButton.Content>
                                        </customControls:ControlButton>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

        </Border>

    </Grid>
</UserControl>
