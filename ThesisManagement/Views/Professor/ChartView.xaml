<UserControl x:Class="ThesisManagement.Views.Professor.ChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThesisManagement.Views.Professor"
             xmlns:sf="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
             xmlns:viewModels="clr-namespace:ThesisManagement.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModels:TasksViewModel />
    </UserControl.DataContext>
    <StackPanel>
        <sf:SfChart>
            <sf:SfChart.Legend>
                <sf:ChartLegend />
            </sf:SfChart.Legend>
            <sf:PieSeries XBindingPath="TaskStatus"
                          Label="TaskStatus"
                          ItemsSource="{Binding TasksPieData, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          YBindingPath="Count">
                <sf:PieSeries.AdornmentsInfo>
                    <sf:ChartAdornmentInfo ShowLabel="True" />
                </sf:PieSeries.AdornmentsInfo>
            </sf:PieSeries>
        </sf:SfChart>

    </StackPanel>

</UserControl>
