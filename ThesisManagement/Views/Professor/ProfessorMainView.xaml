<Window x:Class="ThesisManagement.Views.Professor.ProfessorMainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThesisManagement.Views.Professor"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:userControls="clr-namespace:ThesisManagement.Views.Professor.UserControls"
        mc:Ignorable="d"
        Title="ProfessorMainView" Height="600" Width="1150"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Border CornerRadius="0">

        <Grid>

            <Grid.ColumnDefinitions>
                <!--Sidebar-->
                <ColumnDefinition Width="250" />
                <!--Content-->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--SIDEBAR-->
            <Border CornerRadius="0" Grid.Column="0">

                <Border.Background>
                    <SolidColorBrush Color="{StaticResource primary}" />
                </Border.Background>

                <StackPanel>
                    <!--Logo-->
                    <StackPanel Height="80">
                        <TextBlock Text = "Quản lý luận văn" 
                                   Foreground = "{StaticResource titleColor2}"
                                   FontSize = "30"
                                   FontFamily = "Montserrat"
                                   FontWeight = "Medium"
                                   VerticalAlignment = "Center"
                                   HorizontalAlignment="Center"
                                   Margin = "5,0,0,5" />
                    </StackPanel>

                    <!--SidebarButton-->
                    <RadioButton Style = "{StaticResource sidebarButton}" 
                                 Tag = "{StaticResource color1}">
                        <StackPanel Orientation = "Horizontal" >
                            <fa:IconImage Icon = "RectangleList" Style = "{StaticResource sidebarButtonIcon}" />
                            <TextBlock Text = "Đề tài" Style = "{StaticResource sidebarButtonText}" />
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style = "{StaticResource sidebarButton}" 
                                 Tag = "{StaticResource color2}">
                        <StackPanel Orientation = "Horizontal" >
                            <fa:IconImage Icon = "UserLarge" Style = "{StaticResource sidebarButtonIcon}" />
                            <TextBlock Text = "Sinh viên" Style = "{StaticResource sidebarButtonText}" />
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style = "{StaticResource sidebarButton}" 
                                 Tag = "{StaticResource color3}">
                        <StackPanel Orientation = "Horizontal" >
                            <fa:IconImage Icon = "Book" Style = "{StaticResource sidebarButtonIcon}" />
                            <TextBlock Text = "Luận văn" Style = "{StaticResource sidebarButtonText}" />
                        </StackPanel>
                    </RadioButton>

                </StackPanel>
            </Border>

            <!--Main Section-->
            <Border CornerRadius="0" Grid.Column="1">
                <Border.Background>
                    <SolidColorBrush Color="{StaticResource secondary}" />
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <!--Control Bars-->
                        <RowDefinition Height="35"/>
                        <!--Header / Caption-->
                        <RowDefinition Height="45"/>
                        <!--Content Section -->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--Control Bar-->
                    <StackPanel x:Name="pnlControlBar"
                            Grid.Row="0"
                            Orientation="Horizontal"
                            FlowDirection="RightToLeft"
                            Margin="0,0,5,0">

                        <Button x:Name="btnClose"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color1}">
                            <fa:IconImage Icon="Xmark" Style="{StaticResource controlButtonIcon}" />
                        </Button>

                        <Button x:Name="btnMaximize"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color1}">
                            <fa:IconImage Icon="Square" Style="{StaticResource controlButtonIcon}" />
                        </Button>

                        <Button x:Name="btnMinimize"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color1}">
                            <fa:IconImage Icon="WindowMinimize" Style="{StaticResource controlButtonIcon}" />
                        </Button>
                    </StackPanel>

                    <!--Header / Caption-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!--User Options-->
                        <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                            <fa:IconImage Icon="RectangleList"
                                      Width="25"
                                      Height="25"
                                      Foreground="{StaticResource titleColor1}"
                                      Margin="35,0,10,0"/>
                            <TextBlock Text="Đề tài"
                                       Foreground="{StaticResource titleColor1}"
                                       FontSize="20"
                                       FontFamily="Montserrat"
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Margin="0,0,10,0">
                            <Button Style="{StaticResource iconButton}"
                                Tag="{StaticResource color1}">
                                <fa:IconImage Icon="AngleDown" Style="{StaticResource iconButtonIcon}"/>
                            </Button>

                            <TextBlock Text="Nguyễn Thủy An" 
                                       FontSize="20"
                                       Foreground="{StaticResource titleColor1}"
                                       FontWeight="Medium"
                                       FontFamily="Montserrat"
                                       VerticalAlignment="Center"/>

                        </StackPanel>
                    </Grid>

                    <!--Content Section -->
                    <ContentControl Grid.Row="2"
                                    Margin="25">
                        <userControls:TopicUC />
                    </ContentControl>
                    
                </Grid>

            </Border>
        </Grid>

    </Border>

</Window>
