<Window x:Class="ThesisManagement.Views.Professor.ProfessorMainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThesisManagement.Views.Professor"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:viewModel="clr-namespace:ThesisManagement.ViewModels"
        xmlns:customControl="clr-namespace:ThesisManagement.CustomControls"
        mc:Ignorable="d"
        Title="ProfessorMainView" Height="600" Width="1150"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource windowStyle}">

    <Window.DataContext>
        <viewModel:ProfessorMainVM />
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:TopicsVM}">
            <local:TopicsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:StudentsVM}">
            <local:StudentsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:ThesesVM}">
            <local:ThesesView />
        </DataTemplate>
    </Window.Resources>

    <Border CornerRadius="0">

        <Grid>

            <Grid.ColumnDefinitions>
                <!--Sidebar-->
                <ColumnDefinition Width="Auto" />
                <!--Content-->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--SIDEBAR-->
            <Border Grid.Column="0" Background="{StaticResource primaryBrush}">
                <Grid x:Name="gridSidebar" Width="60">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ToggleButton Grid.Row="0" Style="{StaticResource toggleBtn}">
                        <fa:IconImage Icon="Bars" Foreground="White" Height="18" Width="30" />

                        <ToggleButton.Triggers>
                            <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                                <BeginStoryboard>
                                    <Storyboard x:Name="HideStackPanel">
                                        <DoubleAnimation Storyboard.TargetName="gridSidebar" Storyboard.TargetProperty="Width" BeginTime="0:0:0" From="250" To="60" Duration="0:0:0.5">
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="ToggleButton.Checked">
                                <BeginStoryboard>
                                    <Storyboard x:Name="ShowStackPanel">
                                        <DoubleAnimation Storyboard.TargetName="gridSidebar" Storyboard.TargetProperty="Width" BeginTime="0:0:0" From="60" To="250" Duration="0:0:0.5">
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ToggleButton.Triggers>
                        
                    </ToggleButton>

                    <StackPanel Orientation="Horizontal" Height="35" Margin="5 25 0 40" Grid.Row="1">
                        <Image Source="/Resources/Images/logo-bright.png" Height="28" />
                        <TextBlock Text="QUẢN LÝ LUẬN VĂN" Style="{StaticResource logo}" Margin="10 3 0 0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2">
                        <RadioButton Style="{StaticResource navBtn}" IsChecked="True"
                                 Command="{Binding ShowTopicView}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="RectangleList" Style="{StaticResource navIcon}" />
                                <TextBlock Text="Đề tài" Style="{StaticResource navText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource navBtn}"
                                 Command="{Binding ShowStudentView}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="UserLarge" Style="{StaticResource navIcon}" />
                                <TextBlock Text="Sinh viên" Style="{StaticResource navText}" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource navBtn}"
                                 Command="{Binding ShowThesisView}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Book" Style="{StaticResource navIcon}" />
                                <TextBlock Text="Luận văn" Style="{StaticResource navText}" />
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>

                </Grid>
            </Border>

            <!--Main Section-->
            <Border Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <!--Control Bars-->
                        <RowDefinition Height="25"/>
                        <!--Header / Caption-->
                        <RowDefinition Height="45"/>
                        <!--Content Section -->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <customControl:WindowControlBar />

                    <!--Header / Caption-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!--Toggle Button -->
                        
                        
                        <!--User Options-->

                        <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Margin="0,0,10,0">
                            <Button Style="{StaticResource profileBtn}">
                                <fa:IconImage Icon="AngleDown" Style="{StaticResource profileBtnIcon}"/>
                            </Button>

                            <TextBlock Text="Nguyễn Thủy An" 
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"/>

                        </StackPanel>
                        
                    </Grid>

                    <!--Content Section -->
                    <ContentControl Grid.Row="2"
                                    Margin="25"
                                    Content="{Binding CurrentChildView}">
                    </ContentControl>

                </Grid>

            </Border>
        </Grid>

    </Border>

</Window>
