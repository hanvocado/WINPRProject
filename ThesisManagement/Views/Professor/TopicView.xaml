<UserControl x:Class="ThesisManagement.Views.Professor.TopicView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:customControls="clr-namespace:ThesisManagement.CustomControls"
        xmlns:local="clr-namespace:ThesisManagement.Views.Professor"
        xmlns:viewModels="clr-namespace:ThesisManagement.ViewModels"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Height="450" Width="450"
        Background="White">
    
    <UserControl.DataContext>
        <viewModels:TopicsVM />
    </UserControl.DataContext>

    <Border Padding="0 0 0 15" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition />
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <customControls:WindowControlBar />

            <Border Grid.Row="1" Padding="10 10 15 10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="120"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Tên" 
                           VerticalAlignment="Center"
                           Grid.Row="0" Grid.Column="0" />
                    <TextBox Grid.Row="0" Grid.Column="1"
                                Text=""
                                Margin="10"
                                IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxEnabledComboBox}"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                md:HintAssist.Hint="Tên đề tài" />

                    <Label Content="Thể loại"
                           VerticalAlignment="Center"
                           Grid.Row="1" Grid.Column="0" />
                    
                    <ComboBox Grid.Row="1" Grid.Column="1"
                                ItemsSource="{Binding Topics}"
                                SelectedValue=""
                                Margin="10 10"
                                IsEditable="True"
                                IsTextSearchEnabled="True"
                                TextSearch.TextPath="Category"
                                md:HintAssist.Hint="Thể loại"
                                md:TextFieldAssist.HasClearButton="True"
                                Style="{StaticResource MaterialDesignOutlinedComboBox}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Category}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                     <Label Content="Công nghệ" 
                           VerticalAlignment="Center"
                           Grid.Row="2" Grid.Column="0" />
                     <customControls:FilterComboBox Grid.Row="2" Grid.Column="1"
                                ItemsSource="{Binding Topics}"
                                SelectedValue="{Binding MySelectedItem}"
                                Margin="10 10"
                                IsEditable="True"
                                IsTextSearchEnabled="False"
                                StaysOpenOnEdit="True"
                                md:HintAssist.Hint="Công nghệ"
                                md:TextFieldAssist.HasClearButton="True"
                                Style="{StaticResource MaterialDesignOutlinedComboBox}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Technology}" />
                                    <TextBlock Text="Khác" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </customControls:FilterComboBox>

                    <Label Content="Mô tả" 
                           VerticalAlignment="Center"
                           Grid.Row="3" Grid.Column="0" />
                    <TextBox Grid.Row="3" Grid.Column="1"
                                Height="100"
                                Margin="10"
                                Text="" 
                                md:HintAssist.Hint="Mô tả đề tài"
                                AcceptsReturn="True"
                                IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxEnabledComboBox}"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />

                </Grid>
            </Border>

            <customControls:ControlButton DefaultColor="{StaticResource primaryBrush}"
                                          HoverColor="{StaticResource secondaryBrush}"
                                          Content="Lưu"
                                          Width="100"
                                          Height="50"
                                          Grid.Row="3"/>
        </Grid>
    </Border>

</UserControl>
