            <!--design code-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Đề tài"
                           Foreground="LightGray"
                           FontSize="17"
                           FontWeight="Medium"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Row="1" Grid.Column="0"
                            Text="Xây dựng Website quản lý hệ thống "
                            Foreground="LightGray"
                            FontSize="15"
                            VerticalAlignment="Center"/>

                <TextBlock Grid.Row="0" Grid.Column="1"
                           Text="Hoạt động"
                           Foreground="LightGray"
                           FontSize="17"
                           FontWeight="Medium"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <StackPanel Orientation="Horizontal"
                            FlowDirection="LeftToRight"
                            Grid.Row="1" Grid.Column="1">

                    <Button Style="{StaticResource btnDetail}"
                            VerticalAlignment="Top"
                            Width="50">
                        <fa:IconImage Icon="CircleInfo" Style="{StaticResource crudsButtonIcon}" />
                    </Button>

                    <Button Style="{StaticResource btnUpdate}"
                            VerticalAlignment="Top"
                            Width="50">
                        <fa:IconImage Icon="Pen" Style="{StaticResource crudsButtonIcon}" />
                    </Button>

                    <Button Style="{StaticResource btnDelete}"
                            VerticalAlignment="Top"
                            Width="50">
                        <fa:IconImage Icon="Trash" Style="{StaticResource crudsButtonIcon}" />
                    </Button>

                </StackPanel>
