<Window x:Class="ThesisManagement.Views.Professor.TopicView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:customControls="clr-namespace:ThesisManagement.CustomControls"
        xmlns:viewModels="clr-namespace:ThesisManagement.ViewModels"
        xmlns:local="clr-namespace:ThesisManagement.Views.Professor"
        mc:Ignorable="d"
        Title="TopicView" Height="450" Width="400"
        Style="{StaticResource formStyle}">

    <Window.Resources>
        <viewModels:TopicVM x:Key="TopicVM" />
        <viewModels:TopicsVM x:Key="TopicsVM" />
    </Window.Resources>

    <Border>
        <Grid DataContext="{StaticResource TopicVM}">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition />
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <customControls:PopupControlBar />

            <Border Grid.Row="1" Padding="30 20 30 0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="120"/>
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0"
                             Text="{Binding Name}"
                             VerticalAlignment="Top"
                             md:HintAssist.Hint="Tên đề tài"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                    <ComboBox Grid.Row="1"
                              VerticalAlignment="Top"
                            ItemsSource="{Binding Categories}"
                            SelectedValue="{Binding Category}"
                            md:HintAssist.Hint="Thể loại"
                            md:TextFieldAssist.HasClearButton="True"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}">
                    </ComboBox>
                    
                    <ComboBox Grid.Row="2"
                              VerticalAlignment="Top"
                              md:HintAssist.Hint="Công nghệ"
                              ItemsSource="{Binding Technologies}"
                              SelectedValue="{Binding Technology}"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}">
                    </ComboBox>

                    <TextBox Grid.Row="3"
                             VerticalAlignment="Top"
                             Text="{Binding Description}"
                             Height="100"
                             md:HintAssist.Hint="Mô tả"
                             AcceptsReturn="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto" />
                </Grid>
            </Border>

            <Grid Grid.Row="2" DataContext="{StaticResource TopicsVM}">
                <customControls:ControlButton DefaultColor="{StaticResource primaryBrush}"
                              HoverColor="{StaticResource secondaryBrush}"
                              Content="Lưu"
                              Margin="0 -10 0 20"
                              Width="100"
                              Height="50"
                              FontSize="14"
                              Command="{Binding CreateCommand}"
                              Grid.Row="3"/>
            </Grid>
            
        </Grid>
    </Border>
</Window>
