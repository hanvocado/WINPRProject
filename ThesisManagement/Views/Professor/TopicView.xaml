<Window x:Class="ThesisManagement.Views.Professor.TopicView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:customControls="clr-namespace:ThesisManagement.CustomControls"
        xmlns:viewModels="clr-namespace:ThesisManagement.ViewModels"
        xmlns:local="clr-namespace:ThesisManagement.Views.Professor"
        mc:Ignorable="d"
        x:Name="topicUC"
        Title="TopicView" Height="700" Width="500"
        Style="{StaticResource formStyle}">

    <Window.DataContext>
        <viewModels:TopicsViewModel />
    </Window.DataContext>

    <Border>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="50" />
                <RowDefinition />
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <customControls:PopupControlBar />
            <Grid Grid.Row="1">
                <TextBlock 
                Text="Đề xuất" 
                Style="{StaticResource title}" 
                FontSize="20"
                TextWrapping="Wrap"
                Padding="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
            </Grid>
            <Border Grid.Row="2" Padding="30 20 30 5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="70"/>
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0"
                             Text="{Binding SelectedTopic.Name, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Top"
                             md:HintAssist.Hint="Tên đề tài"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                    <ComboBox Grid.Row="1"
                              VerticalAlignment="Top"
                            ItemsSource="{Binding Categories}"
                            SelectedValue="{Binding SelectedTopic.Category, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                            md:HintAssist.Hint="Thể loại"
                            md:TextFieldAssist.HasClearButton="True"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}">
                    </ComboBox>
                    
                    <ComboBox Grid.Row="2"
                              VerticalAlignment="Top"
                              md:HintAssist.Hint="Công nghệ"
                              ItemsSource="{Binding Technologies}"
                              SelectedValue="{Binding SelectedTopic.Technology,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}">
                    </ComboBox>
                    <TextBox Grid.Row="3"
                             Text="{Binding SelectedTopic.StudentQuantity, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Top"
                             md:HintAssist.Hint="Số lượng thành viên tối đa"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                    <TextBox Grid.Row="4"
                             VerticalAlignment="Top"
                             Text="{Binding SelectedTopic.Requirement,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Height="70"
                             md:HintAssist.Hint="Yêu cầu"
                             AcceptsReturn="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto" />
                    
                    <TextBox Grid.Row="5"
                             VerticalAlignment="Top"
                             Text="{Binding SelectedTopic.Description,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Height="65"
                             md:HintAssist.Hint="Mô tả"
                             AcceptsReturn="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto" />

                </Grid>
            </Border>

            <Grid Grid.Row="3" >
                <TextBox Text="{Binding SelectedTopic.Id}" Visibility="Hidden" />
                <TextBox Text="{Binding SelectedTopic.ProfessorId}" Visibility="Hidden" />
                <customControls:ControlButton DefaultColor="{StaticResource primaryBrush}"
                              HoverColor="{StaticResource secondaryBrush}"
                              Content="Gửi"
                              Margin="0 -10 0 20"
                              Width="100"
                              Height="50"
                              FontSize="14"
                              Command="{Binding CreateOrUpdateCommand}"
                              CommandParameter="{Binding ElementName=topicUC}"
                              Grid.Row="3"/>
            </Grid>
            
        </Grid>
    </Border>
</Window>
