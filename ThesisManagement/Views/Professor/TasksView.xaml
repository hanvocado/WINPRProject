<UserControl x:Class="ThesisManagement.Views.Professor.TasksView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThesisManagement.Views.Professor"
        xmlns:customControls="clr-namespace:ThesisManagement.CustomControls"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewModels="clr-namespace:ThesisManagement.ViewModels"
        mc:Ignorable="d" 
             Background="White"
        d:DesignHeight="450" d:DesignWidth="900">
    <UserControl.Resources>
        <Style x:Key="A" TargetType="TextBlock">
            <Setter Property="Background" Value="#5aedff"/>
            <Setter Property="Foreground" Value="#303f9d"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20 12 0 0"/>
        </Style>
        <Style x:Key="B" TargetType="TextBlock">
            <Setter Property="Background" Value="#9ae2ca" />
            <Setter Property="Foreground" Value="#436358" />
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20 12 0 0"/>
        </Style>
        <Style x:Key="C" TargetType="TextBlock">
            <Setter Property="Background" Value="#fee9ee" />
            <Setter Property="Foreground" Value="#8f535f" />
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20 12 0 0"/>
        </Style>
    </UserControl.Resources>
    
    <UserControl.DataContext>
        <viewModels:TasksViewModel/>
    </UserControl.DataContext>
        
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Image Source="/Resources/Images/UTE.png" Height="50" Width="50" Margin="20 0 20 0" />
            <TextBlock Style="{StaticResource title}" >
                <Run Text="Đề tài: "/>
                <Run Text="{Binding SelectedThesis.Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </TextBlock>
        </StackPanel>

        <Expander  IsExpanded="False" Grid.Row="1" HorizontalAlignment="Stretch" Background="Transparent">
            <Expander.Header>
                <TextBlock Text="Đang thực hiện" Style="{StaticResource A}" MinHeight="40" Margin="-23,0,-63,0"/>
            </Expander.Header>
            <ListView
                Name="TaskListView"
                    ItemsSource="{Binding Tasks}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="50">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <customControls:ControlButton DefaultColor="#4fc3f7"
                                    HoverColor="#0093C4"
                                    Width="30"
                                    Margin="5 0 0 0"
                                    Click="button_click">
                                            <customControls:ControlButton.Content>
                                                <fa:IconImage Icon="Pen" Style="{StaticResource btnIcon}" />
                                            </customControls:ControlButton.Content>
                                        </customControls:ControlButton>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="220"
                    DisplayMemberBinding="{Binding tieude}" >
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Nhiệm vụ" />
                            </GridViewColumn.Header>
                        </GridViewColumn>

                        <GridViewColumn Width="200"
                    DisplayMemberBinding="{Binding tiendo}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Sinh viên" />
                            </GridViewColumn.Header>
                        </GridViewColumn>

                        <GridViewColumn Width="150"
                    DisplayMemberBinding="{Binding start}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Ngày bắt đầu" />
                            </GridViewColumn.Header>
                        </GridViewColumn>

                        <GridViewColumn Width="150"
                    DisplayMemberBinding="{Binding end}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Ngày kết thúc" />
                            </GridViewColumn.Header>
                        </GridViewColumn>

                        <GridViewColumn Width="150"
                    DisplayMemberBinding="{Binding trangthai}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Tiến độ" />
                            </GridViewColumn.Header>
                        </GridViewColumn>

                    </GridView>
                </ListView.View>
            </ListView>
        </Expander>
        <Expander IsExpanded="False" Grid.Row="2" HorizontalAlignment="Stretch" Background="Transparent">
            <Expander.Header>
                <TextBlock Text="Đã hoàn thành" Style="{StaticResource B}" MinHeight="40" Margin="-23,0,-63,0"  />
            </Expander.Header>
        </Expander>
        <Expander  IsExpanded="False" Grid.Row="3" HorizontalAlignment="Stretch" Background="Transparent">
            <Expander.Header>
                <TextBlock Text="Đã Quá hạn" Style="{StaticResource C}" MinHeight="40" Margin="-23,0,-63,0"/>
            </Expander.Header>
        </Expander>
        <Grid Grid.Row="4">
            <Button Width="750" Height="30" Margin="10 10 10 10" Command="{Binding CreateTaskCommand}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#9ae2ca"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <TextBlock Text="+ new task" Style="{StaticResource B}" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="15" RenderTransformOrigin="0.514,0.256" Height="46"/>
            </Button>
        </Grid>
    </Grid>
</UserControl>
