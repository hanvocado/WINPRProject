            <!--design code-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Đề tài"
                           Foreground="LightGray"
                           FontSize="17"
                           FontWeight="Medium"
                           VerticalAlignment="Center"/>
                <TextBlock Text="Sinh viên"
                           Foreground="LightGray"
                           FontSize="17"
                           FontWeight="Medium"
                           VerticalAlignment="Center"
                           Grid.Row="0" Grid.Column="1"/>

                <TextBlock Grid.Row="0" Grid.Column="2"
                           Text="Trạng thái"
                           Foreground="LightGray"
                           FontSize="17"
                           FontWeight="Medium"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <TextBlock Grid.Row="1" Grid.Column="0"
                            Text="Website hệ thống quản lý "
                            Foreground="LightGray"
                            FontSize="15"
                            VerticalAlignment="Center"/>

                <Button Style="{StaticResource btnSearch}"
                        VerticalAlignment="Top"
                        Width="100"
                        Grid.Row="1" Grid.Column="2">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Spinner" Style="{StaticResource crudsButtonIcon}" />
                        <TextBlock Text="Đang chờ" Style="{StaticResource crudsButtonText}"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource btnCreate}"
                        VerticalAlignment="Top"
                        Width="100"
                        Grid.Row="2" Grid.Column="2">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Check" Style="{StaticResource crudsButtonIcon}" />
                        <TextBlock Text="Chấp nhận" Style="{StaticResource crudsButtonText}"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource btnDelete}"
                        VerticalAlignment="Top"
                        Width="100"
                        Grid.Row="3" Grid.Column="2">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Xmark" Style="{StaticResource crudsButtonIcon}" />
                        <TextBlock Text="Từ chối" Style="{StaticResource crudsButtonText}"/>
                    </StackPanel>
                </Button>

            </Grid>

        </Border>

    </Grid>
