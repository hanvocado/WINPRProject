<UserControl x:Class="ThesisManagement.Views.Student.MyThesis"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThesisManagement.Views.Student"
             xmlns:viewModels="clr-namespace:ThesisManagement.ViewModels"
             xmlns:customControls="clr-namespace:ThesisManagement.CustomControls"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:userControls="clr-namespace:ThesisManagement.Views.Student"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000"
             Background="White">
    <UserControl.Resources>
        <Style x:Key="Button1Style" TargetType="Button">
            <Setter Property="Background" Value="Green"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Green" BorderThickness="1" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Green"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <Style x:Key="Button2Style" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Green"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Green" BorderThickness="1" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Green"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="3*"/>
            
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Image Source="/Resources/Images/UTE.jpg" Width="149" Margin="0,0,0,0">
                    <Image.Effect>
                        <DropShadowEffect ShadowDepth="5" BlurRadius="10" Direction="270"/>
                    </Image.Effect>
                </Image>
            </Grid>
            <Grid Grid.Column="1">
                <TextBlock 
                    Text="Đề tài : Ứng dụng bản đồ số xây dựng website tìm kiếm và cho thuê bất động sản khu vực Hà Nội " 
                    Style="{StaticResource title}" 
                    FontSize="20"
                    TextWrapping="Wrap"
                    Padding="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
            </Grid>
        </Grid>
        <StackPanel Grid.Row="1"
        Orientation="Horizontal">
            <fa:IconImage Icon="Search"
              Margin="0 4 5 0"
              Height="17" 
              Width="20"/>
            <ComboBox VerticalAlignment="Center"
                      Padding="10"
                      Margin="0,0,20,0"
                      Width="200"
                      ItemsSource="{Binding }"
                      SelectedValue="{Binding Category}"
                      md:HintAssist.Hint="Trạng thái"
                      md:TextFieldAssist.HasClearButton="True"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}">
                <ComboBoxItem>Đã hoàn thành</ComboBoxItem>
                <ComboBoxItem>Đang thực hiện</ComboBoxItem>
                <ComboBoxItem>Chưa hoàn thành</ComboBoxItem>
            </ComboBox>

            

        </StackPanel>

        <Grid Grid.Row="2">
            <TabControl 
                    HorizontalContentAlignment="Left"
                    Style="{StaticResource MaterialDesignUniformTabControl}">
                <TabItem Header="Tổng quan">
                    
                </TabItem>

                <TabItem Header="Nhiệm vụ">
                    <ListView Grid.Row="1"
                            Name="AdminsListView"
                            ItemsSource="{Binding Topics}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="150"
                                        DisplayMemberBinding="{Binding }" >
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Tiêu đề" />
                                    </GridViewColumn.Header>
                                </GridViewColumn>
                                
                                <GridViewColumn Width="200"
                                        DisplayMemberBinding="{Binding Technology}">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Tiến độ" />
                                    </GridViewColumn.Header>
                                </GridViewColumn>

                                <GridViewColumn Width="200"
                                        DisplayMemberBinding="{Binding Professor.Name}">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Ngày bắt đầu" />
                                    </GridViewColumn.Header>
                                </GridViewColumn>

                                <GridViewColumn Width="200"
                                        DisplayMemberBinding="{Binding Professor.Name}">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Ngày kết thúc" />
                                    </GridViewColumn.Header>
                                </GridViewColumn>

                                <GridViewColumn Width="200"
                                        DisplayMemberBinding="{Binding }">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Trạng thái" />
                                    </GridViewColumn.Header>
                                </GridViewColumn>

                            </GridView>
                        </ListView.View>
                    </ListView>
                </TabItem>

            </TabControl>
        </Grid>
    </Grid>
</UserControl>
