<UserControl x:Class="ThesisManagement.Views.Student.MyThesis"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThesisManagement.Views.Student"
             xmlns:viewModels="clr-namespace:ThesisManagement.ViewModels"
             xmlns:customControls="clr-namespace:ThesisManagement.CustomControls"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:userControls="clr-namespace:ThesisManagement.Views.Student"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="900"
             Background="White">
    <UserControl.Resources>
        <Style x:Key="Button1Style" TargetType="Button">
            <Setter Property="Background" Value="Green"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Green" BorderThickness="1" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Green"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <Style x:Key="Button2Style" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Green"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Green" BorderThickness="1" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Green"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Image Source="/Resources/Images/UTE.png" Height="70" Width="70" Margin="10 0 0 0" />
            </Grid>
            <Border Grid.Column="1" Padding="0 0 20 0">
                <TextBlock 
                    Text="Đề tài : Ứng dụng bản đồ số xây dựng website tìm kiếm và cho thuê bất động sản khu vực Hà Nội " 
                    Style="{StaticResource title}" />
            </Border>
        </Grid>
        

        <Grid Grid.Row="1">
            <TabControl 
                    HorizontalContentAlignment="Left"
                    Style="{StaticResource MaterialDesignUniformTabControl}">
                <TabItem Header="Tổng quan">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>


                        <TextBlock Grid.Row="0"
                                   Text="Giảng viên "
                                   Margin="10"
                                   FontWeight="Medium"/>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="1"
                                   Text="Võ Văn Ngân"
                                   Margin="10"
                                   FontWeight="Normal"/>


                        <TextBlock Grid.Row="1"
                                    Text="Thể loại"
                                    Margin="10"
                                    FontWeight="Medium"/>

                        <TextBlock Grid.Row="1"
                                   Grid.Column="1"
                                   Text="Giáo dục"
                                   Margin="10"
                                   FontWeight="Normal"/>

                        <TextBlock Grid.Row="2"
                                    Text="Công nghệ"
                                    Margin="10"
                                    FontWeight="Medium"/>

                        <TextBlock Grid.Row="2"
                                   Grid.Column="1"
                                   Text="Python"
                                   Margin="10"
                                   FontWeight="Normal"/>

                        <TextBlock Grid.Row="3"
                                    Text="Thành viên "
                                    Margin="10"
                                    FontWeight="Medium"/>

                        <TextBlock Grid.Row="3"
                                   Grid.Column="1"
                                   Text="Võ Văn Nam,Nguyễn Thanh Tùng"
                                   Margin="10"
                                   FontWeight="Normal"/>


                        <TextBlock Grid.Row="0"
                                       Grid.Column="2"
                                       Text="Mô tả"
                                       Margin="10"
                                       FontWeight="Medium"/>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="3"
                                   Text="TravelExplore là một nền tảng trực tuyến cung cấp thông tin và dịch vụ về du lịch và khám phá du lịch trên khắp thế giới. Trang web cung cấp cho người dùng một loạt các tài nguyên hữu ích để lên kế hoạch cho chuyến đi của họ, từ việc tìm kiếm địa điểm đến đặt phòng khách sạn và đặt vé máy bay."
                                   Margin="10"
                                   FontWeight="Normal"
                                   TextWrapping="Wrap"/>
                        
                        
                        <TextBlock Grid.Row="1"
                                       Grid.Column="2"
                                       Text="Yêu cầu"
                                       Margin="10"
                                       FontWeight="Medium"/>
                        

                    </Grid>
                </TabItem>

                <TabItem Header="Nhiệm vụ">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0"
                                    Orientation="Horizontal">
                            <fa:IconImage Icon="Search"
                                          Margin="0 4 5 0"
                                          Height="17" 
                                          Width="20"/>
                            <ComboBox VerticalAlignment="Center"
                                      Padding="10"
                                      Margin="0,0,20,0"
                                      Width="200"
                                      ItemsSource="{Binding }"
                                      SelectedValue="{Binding Category}"
                                      md:HintAssist.Hint="Trạng thái"
                                      md:TextFieldAssist.HasClearButton="True"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                <ComboBoxItem>Đã hoàn thành</ComboBoxItem>
                                <ComboBoxItem>Chưa hoàn thành</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                        
                        <ListView Grid.Row="1"
                                Name="AdminsListView"
                                ItemsSource="{Binding YourTaskList}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Width="50">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <customControls:ControlButton DefaultColor="#4fc3f7"
                                                                                    HoverColor="#0093C4"
                                                                                    Width="30"
                                                                                    Margin="5 0 0 0"
                                                                                    Click="button_click">
                                                        <customControls:ControlButton.Content>
                                                            <fa:IconImage Icon="Pen" Style="{StaticResource btnIcon}" />
                                                        </customControls:ControlButton.Content>
                                                    </customControls:ControlButton>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="150"
                                                    DisplayMemberBinding="{Binding tieude}" >
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Tiêu đề" />
                                        </GridViewColumn.Header>
                                    </GridViewColumn>

                                    <GridViewColumn Width="100"
                    DisplayMemberBinding="{Binding tiendo}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Tiến độ" />
                                        </GridViewColumn.Header>
                                    </GridViewColumn>

                                    <GridViewColumn Width="150"
                    DisplayMemberBinding="{Binding start}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Ngày bắt đầu" />
                                        </GridViewColumn.Header>
                                    </GridViewColumn>

                                    <GridViewColumn Width="150"
                    DisplayMemberBinding="{Binding end}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Ngày kết thúc" />
                                        </GridViewColumn.Header>
                                    </GridViewColumn>

                                    <GridViewColumn Width="100"
                    DisplayMemberBinding="{Binding trangthai}">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Trạng thái" />
                                        </GridViewColumn.Header>
                                    </GridViewColumn>

                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                    
                </TabItem>

            </TabControl>
        </Grid>
    </Grid>
</UserControl>
