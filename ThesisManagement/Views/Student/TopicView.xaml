<Window x:Class="ThesisManagement.Views.Student.TopicView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThesisManagement.Views.Student"
        xmlns:customControls="clr-namespace:ThesisManagement.CustomControls"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        xmlns:viewModels="clr-namespace:ThesisManagement.ViewModels"
        Title="TopicView" Height="570" Width="600"
        WindowStyle="None"
        Style="{StaticResource formStyle}"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <viewModels:TopicsViewModel />
    </Window.DataContext>
    <Border>
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="140"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            
            <customControls:PopupControlBar Grid.Row="0" />
            <Grid Grid.Row="1">
                <TextBlock  Text="Đăng Ký Đề Tài" 
                            Style="{StaticResource title}" 
                            FontSize="20"
                            TextWrapping="Wrap"
                            Padding="0 0 0 10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
            </Grid>

            <Border Grid.Row="2" Padding="30 0">
                <TextBox Grid.Row="0"
                        Height="60"
                        VerticalAlignment="Top"
                        Style="{StaticResource TextBoxExtend}"
                        hc:InfoElement.Title="Tên đề tài" />
            </Border>
            
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Padding="30 0">
                    <ComboBox Grid.Row="1"
                              VerticalAlignment="Top"
                              Height="60"
                              ItemsSource="{Binding Categories}"
                              SelectedValue="{Binding SelectedTopic.Category}"
                              hc:InfoElement.Title="Thể loại"
                              Style="{StaticResource ComboBoxExtend}"/>
                </Border>

                <Border Grid.Column="1" Padding="30 0">
                    <ComboBox Grid.Row="1"
                              VerticalAlignment="Top"
                              Height="60"
                              ItemsSource="{Binding Technologies}"
                              SelectedValue="{Binding SelectedTopic.Technology}"
                              hc:InfoElement.Title="Công nghệ"
                              Style="{StaticResource ComboBoxExtend}" />
                </Border>
            </Grid>

            <Border Grid.Row="4" Padding="30 0">
                <ComboBox Grid.Row="1"
                            VerticalAlignment="Top"
                            Height="60"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                            ItemsSource="{Binding Professors}"
                            SelectedValue="{Binding SelectedTopic.ProfessorId}"
                            hc:InfoElement.Title="Giảng viên"
                            Style="{StaticResource ComboBoxExtend}" />
            </Border>

            <Border Grid.Row="5" Padding="30 0">
                <hc:CheckComboBox Height="60"
                                  VerticalAlignment="Top"
                                  hc:InfoElement.Title="Thành viên"
                                  Style="{StaticResource CheckComboBoxExtend}"
                                    ItemsSource="{Binding Students}" >
                    <hc:CheckComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Id}" />
                                <TextBlock Text="_" />
                                <TextBlock Text="{Binding Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </hc:CheckComboBox.ItemTemplate>
                </hc:CheckComboBox>
            </Border>

            <Border Grid.Row="6" Padding="30 0">
                <TextBox Grid.Row="2"
                         VerticalAlignment="Top"
                         Height="120"
                         Text="" 
                         hc:InfoElement.Title="Chú thích"
                         Style="{StaticResource TextBoxExtend}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"/>
            </Border>
            
            <customControls:ControlButton DefaultColor="{StaticResource primaryBrush}"
                              HoverColor="{StaticResource secondaryBrush}"
                              Content="Gửi"
                              Margin="0 -10 0 20"
                              Width="100"
                              Height="50"
                              FontSize="14"
                              Grid.Row="7"/>
        </Grid>
    </Border>
</Window>