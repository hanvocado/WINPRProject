<Window x:Class="ThesisManagement.Views.Student.TopicView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThesisManagement.Views.Student"
        xmlns:customControls="clr-namespace:ThesisManagement.CustomControls"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="TopicView" Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid>

        <Border Background="White"
                CornerRadius="20"
                BorderThickness="3"
                BorderBrush="{StaticResource cs_BorderBrushLayer}"
            />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Grid.Column="2">
                <!--<Button x:Name="btnClose"
                        Click="btnClose_Click"
                        Style="{StaticResource windowControlBtn}">
                        <fa:IconImage Icon="X" Style="{StaticResource windowControlIcon}" />
                </Button>-->


            </StackPanel>
            <ComboBox Grid.Row="1" Grid.Column="1"
                ItemsSource="{Binding Topics}"
                SelectedValue=""
                Margin="10 10"
                IsEditable="True"
                IsTextSearchEnabled="True"
                TextSearch.TextPath="Category"
                md:HintAssist.Hint="Thể loại"
                md:TextFieldAssist.HasClearButton="True"
                Style="{StaticResource MaterialDesignOutlinedComboBox}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Category}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <customControls:ControlButton DefaultColor="{StaticResource primaryBrush}"
                              HoverColor="{StaticResource secondaryBrush}"
                              Content="Lưu"
                              Width="100"
                              Grid.Row="1"
                              VerticalAlignment="Bottom"/>
            
        </Grid>
    </Grid>
</Window>
