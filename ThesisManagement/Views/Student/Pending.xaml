<UserControl x:Class="ThesisManagement.Views.Student.Pending"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThesisManagement.Views.Student"
             xmlns:viewModels="clr-namespace:ThesisManagement.ViewModels"
             xmlns:customControls="clr-namespace:ThesisManagement.CustomControls"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d"
             Background="White">
                
    <UserControl.Resources>
        <viewModels:TopicsVM x:Key="TopicsVM" />
        <Style x:Key="ExpanderHeaderStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="LightBlue" />
        </Style>
        <viewModels:TopicVM x:Key="TopicVM"/>
    </UserControl.Resources>
    
    <Grid>
        
        <!--<Expander materialDesign:ExpanderAssist.VerticalHeaderPadding="0,0,0,5" ExpandDirection="Down">
            <Expander.Header>
                <TextBlock RenderTransformOrigin=".5,.5" Text="Đang chờ duyệt">
                    <TextBlock.LayoutTransform>
                        <RotateTransform Angle="0" />
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </Expander.Header>
            <StackPanel Orientation="Horizontal" Margin="10">
               
                <TextBlock Text="Sample content inside the Expander" />
                
            </StackPanel>-->
        <!--</Expander>-->
        <Expander  IsExpanded="False">
            <Expander.Header>
                <TextBlock Text="Chờ duyệt" Style="{StaticResource ExpanderHeaderStyle}" MinHeight="40" Width="700"/>
            </Expander.Header>
            <ListView Grid.Row="1"
                      MouseLeftButtonUp="ListViewItem_Click"
                      Name="AdminsListView"
                      DataContext="{StaticResource TopicsVM}"
                      ItemsSource="{Binding Topics}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="200"
                             DisplayMemberBinding="{Binding Name}" >
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Đề tài" />
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="180"
                            DisplayMemberBinding="{Binding Category}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Thể loại" />
                            </GridViewColumn.Header>
                        </GridViewColumn>

                        <GridViewColumn Width="180"
                            DisplayMemberBinding="{Binding Name}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Công nghệ" />
                            </GridViewColumn.Header>
                        </GridViewColumn>

                        <GridViewColumn Width="180"
                            DisplayMemberBinding="{Binding Name}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Template="{StaticResource lvHeader}" Tag="Giảng viên" />
                            </GridViewColumn.Header>
                        </GridViewColumn>
                        <GridViewColumn Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <customControls:ControlButton DefaultColor="{StaticResource danger}"
                                              HoverColor="{StaticResource dangerHover}"
                                              Width="30"
                                              Command="{Binding DeleteCommand}">
                            <customControls:ControlButton.Content>
                                <fa:IconImage Icon="Trash" Style="{StaticResource btnIcon}" />
                            </customControls:ControlButton.Content>
                        </customControls:ControlButton>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Expander>
        
    </Grid>
</UserControl>
