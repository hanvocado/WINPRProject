<Window x:Class="ThesisManagement.Views.Student.RegisterTopicView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThesisManagement.Views.Student"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:customControls="clr-namespace:ThesisManagement.CustomControls"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:ThesisManagement.ViewModels"
             mc:Ignorable="d" 
             Height="400" Width="650"
             Background="White"
             Style="{StaticResource formStyle}">
    <Window.DataContext>
        <viewModels:TopicsViewModel />
    </Window.DataContext>

    <Border Margin="15 0 0 20">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <customControls:PopupControlBar />

            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Image Source="/Resources/Images/UTE.png" Height="50" Width="50" Margin="5 0 20 0" />
                <TextBlock Style="{StaticResource title}" Text="Đề tài: Xây dựng ứng dụng quản lý cửa hàng hoa lan" />
                <!--<Run Text="Đề tài: "/>
                        <Run Text="{Binding SelectedTopic.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>    
                    </TextBlock>-->
            </StackPanel>
            <Grid Grid.Row="2">

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="149"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Margin="5,0,0,0" VerticalAlignment="Top" Content="Mô tả" FontSize="15" FontWeight="Bold" MaxWidth="450" />
                <TextBlock Grid.Row="0" Grid.Column="1" 
                           FontSize="15"
                           Margin="5"
                           Text="{Binding SelectedTopic.Description, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

                <Label Grid.Row="1" Margin="5,0,0,0" VerticalAlignment="Top" Content="Yêu cầu " FontSize="15" FontWeight="Bold" MaxWidth="450" />
                <TextBlock Grid.Row="1" Grid.Column="1" 
                           FontSize="15"
                           Margin="5"
                           Text="{Binding SelectedTopic.Requirement, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

                <Label Grid.Row="2" Margin="5,0,0,0" VerticalAlignment="Top" Content="Số lượng sinh viên" FontSize="15" FontWeight="Bold" MaxWidth="450"  />
                <TextBlock Grid.Row="2" Grid.Column="1" 
                           FontSize="15"
                           Margin="5"
                           Text="{Binding SelectedTopic.StudentQuantity, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

                <Label Grid.Row="3" Margin="5" Content="Thời gian" FontSize="15" FontWeight="Bold" MaxWidth="450"  />
                <TextBlock Grid.Row="3" Grid.Column="1" Text=""/>

            </Grid>

            <Grid Grid.Row="3"
                  VerticalAlignment="Center">
                <customControls:ControlButton DefaultColor="{StaticResource primaryBrush}"
                                              HoverColor="{StaticResource secondaryBrush}"
                                              Width="110">
                    <customControls:ControlButton.Content>
                        <TextBlock Text="Đăng Kí" Style="{StaticResource btnContent}"/>
                    </customControls:ControlButton.Content>
                </customControls:ControlButton>

            </Grid>
        </Grid>
    </Border>
</Window>
