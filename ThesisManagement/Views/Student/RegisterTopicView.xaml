<Window x:Class="ThesisManagement.Views.Student.RegisterTopicView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThesisManagement.Views.Student"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:customControls="clr-namespace:ThesisManagement.CustomControls"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:viewModels="clr-namespace:ThesisManagement.ViewModels"
             mc:Ignorable="d" 
             Height="600" Width="600"
             Background="White"
             Style="{StaticResource formStyle}">
    <Window.DataContext>
        <viewModels:TopicsViewModel />
    </Window.DataContext>

    <Border>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="50" />
                <RowDefinition Height="180" />
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <customControls:PopupControlBar />
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Image Source="/Resources/Images/UTE.png" Height="50" Width="50" Margin="20 0 20 0" />
                <TextBlock Style="{StaticResource title}" >
                    <Run Text="Đề tài: "/>
                    <Run Text="{Binding SelectedTopic.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>    
                </TextBlock>
            </StackPanel>
            
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="1" Padding="30 20 20 0">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBox Grid.Row="0"
                              Text="{Binding SelectedTopic.StudentQuantity, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                              Height="50"
                                 VerticalAlignment="Top"
                              IsReadOnly="True"
                              md:HintAssist.Hint="Số lượng thành viên tối đa"/>

                        <hc:ComboBox Grid.Row="1"
                                  IsHitTestVisible="False"
                                    IsEditable="True"
                                    IsReadOnly="True"
                                     Height="50"
                                  VerticalAlignment="Top"
                                  md:HintAssist.Hint="Công nghệ"
                                  ItemsSource="{Binding Technologies}"
                                  SelectedValue="{Binding SelectedTopic.Technology,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        </hc:ComboBox>
                    </Grid>



                </Border>

                <Border Grid.Column="0" Padding="20 20 30 0">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <ComboBox Grid.Row="1"
                                  VerticalAlignment="Top"
                                  Height="50"
                                  ItemsSource="{Binding Categories}"
                                  SelectedValue="{Binding SelectedTopic.Category, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                  IsHitTestVisible="False"
                                  IsEditable="True"
                                  IsReadOnly="True"
                                  md:HintAssist.Hint="Thể loại"
                                  md:TextFieldAssist.HasClearButton="True">
                        </ComboBox>


                        <TextBox Grid.Row="0"
                             Text="{Binding SelectedTopic.Professor.Name, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                             IsReadOnly="True"
                             VerticalAlignment="Top"
                                 Height="50"
                             md:HintAssist.Hint="Giảng viên"/>

                    </Grid>

                </Border>
            </Grid>
            
            <TextBox Grid.Row="3"
                     IsReadOnly="True"
                      VerticalAlignment="Top"
                      Text="{Binding SelectedTopic.Description,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Height="60"
                      md:HintAssist.Hint="Mô tả"
                      AcceptsReturn="True"
                      TextWrapping="Wrap"
                      VerticalScrollBarVisibility="Auto" Margin="22,0,22,0" />
            
            <TextBox Grid.Row="4"
                     IsReadOnly="True"
                      VerticalAlignment="Top"
                      Text="{Binding SelectedTopic.Requirement,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Height="60"
                      md:HintAssist.Hint="Yêu cầu"
                      AcceptsReturn="True"
                      TextWrapping="Wrap"
                      VerticalScrollBarVisibility="Auto" Margin="22,0,22,0" />

            <StackPanel Grid.Row="5">
                <hc:CheckComboBox Margin="22 0"
                      Height="60"
                      VerticalAlignment="Top"
                      ItemsSource="{Binding Students}"
                      SelectedItem="{Binding SelectedStudents}"
                      md:HintAssist.Hint="Thành viên"
                      md:TextFieldAssist.HasClearButton="True">
                    <hc:CheckComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Id}" />
                                <TextBlock Text="_" />
                                <TextBlock Text="{Binding Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </hc:CheckComboBox.ItemTemplate>
                </hc:CheckComboBox>
            </StackPanel>

            <Grid Grid.Row="6" >

                <customControls:ControlButton DefaultColor="{StaticResource primaryBrush}"
                          HoverColor="{StaticResource secondaryBrush}"
                          Content="Đăng kí"
                          Margin="0 10 0 20"
                          Width="100"
                          Height="50"
                          FontSize="14"
                          Command="{Binding RegisterThesisCommand}"
                          Grid.Row="3"/>
            </Grid>

        </Grid>
    </Border>
</Window>
