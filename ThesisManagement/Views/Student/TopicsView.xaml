<UserControl x:Class="ThesisManagement.Views.Student.TopicsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:ThesisManagement.ViewModels"
             xmlns:customControls="clr-namespace:ThesisManagement.CustomControls"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:userControls="clr-namespace:ThesisManagement.Views.Student"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">

    <UserControl.DataContext>
        <viewModels:TopicsVM />
        
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                    Orientation="Horizontal">
                <fa:IconImage Icon="Search"
                          Margin="0 7 5 0"
                          Height="17" 
                          Width="20"/>
                <ComboBox Grid.Column="0"
                          DataContext="{Binding SelectedTopic}"
                          Margin="0 0 40 0"
                          VerticalAlignment="Top"
                          md:HintAssist.Hint="Thể loại "
                          md:TextFieldAssist.HasClearButton="True"
                          ItemsSource="{Binding Categories}"
                          SelectedValue="{Binding Category}"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}">
                </ComboBox>
    
                <ComboBox Grid.Column="1"
                          DataContext="{Binding SelectedTopic}"
                          Margin="0,0,40,0"
                          VerticalAlignment="Top"
                          md:HintAssist.Hint="Công nghệ"
                          md:TextFieldAssist.HasClearButton="True"
                          ItemsSource="{Binding Technologies}"
                          SelectedValue="{Binding Technology}"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}">
                </ComboBox>

                <ComboBox Grid.Column="2"
                          Margin="0,0,40,0"
                          VerticalAlignment="Top"
                          md:HintAssist.Hint="Giảng viên"
                          md:TextFieldAssist.HasClearButton="True"
                          ItemsSource="{Binding Technology}"
                          SelectedValue="{Binding Technology}"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}">
                </ComboBox>



            </StackPanel>


            <customControls:ControlButton Grid.Column="4"
                                      DefaultColor="{StaticResource primaryBrush}"
                                      HoverColor="{StaticResource secondaryBrush}"
                                      Width="80"
                                      Command="{Binding YourButtonCommand}">
                <customControls:ControlButton.Content>
                    <TextBlock Text="Đề xuất" Style="{StaticResource btnContent}"/>
                    
                </customControls:ControlButton.Content>
            </customControls:ControlButton>

        </Grid>
        <Border Grid.Row="2">

            <ListView Grid.Row="1"
              Name="AdminsListView"
              ItemsSource="{Binding Topics}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Đề tài" Width="200" HeaderContainerStyle="{StaticResource header}"
                                    DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Thể loại" Width="200" HeaderContainerStyle="{StaticResource header}"
                                    DisplayMemberBinding="{Binding Category}" />
                        <GridViewColumn Header="Công nghệ" Width="200" HeaderContainerStyle="{StaticResource header}"
                                    DisplayMemberBinding="{Binding Technology}" />
                        <GridViewColumn Header="Giảng viên" Width="150" HeaderContainerStyle="{StaticResource header}"
                                    DisplayMemberBinding="{Binding ProfessorId}" />
                        <GridViewColumn Width="50" HeaderContainerStyle="{StaticResource header}">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <customControls:ControlButton DefaultColor="{StaticResource danger}"
                                                              HoverColor="{StaticResource dangerHover}"
                                                              Width="30">
                                        <customControls:ControlButton.Content>
                                            <fa:IconImage Icon="Trash" Style="{StaticResource btnIcon}" />
                                        </customControls:ControlButton.Content>
                                    </customControls:ControlButton>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

        </Border>

    </Grid>
</UserControl>
