<UserControl x:Class="ThesisManagement.Views.Student.TopicsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThesisManagement.Views.Student"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                    Orientation="Horizontal"
                    VerticalAlignment="Top"
                    FlowDirection="LeftToRight">
                <fa:IconImage Icon="Search" 
                          Height="20" 
                          Width="20" 
                          Foreground="{StaticResource plainTextColor}"/>
                <ComboBox Text="Đề tài..."   
                      FontSize="13"
                      Height="24"
                      Width="200"
                      Background="Transparent"
                      FontWeight="Medium"
                      FontFamily="Montserrat"
                      Foreground="{StaticResource plainTextColor}"
                      BorderBrush="{StaticResource plainTextColor}"
                      BorderThickness="0,0,0,1"
                      VerticalContentAlignment="Center"
                      Margin="5,5,0,0">
                </ComboBox>

                <!--<Button Style="{StaticResource btnSearch}"
                    Command=""
                    Content="Tìm kiếm"
                    VerticalAlignment="Top">
                </Button>-->

            </StackPanel>

        </Grid>

        <Border Grid.Row="1"
            Background="#0A426E"
            Padding="10">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0">
                    <TextBlock Text="Danh sách đề tài"
                    FontSize="18"
                    FontWeight="Medium"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="White"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="25*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0"
                        Text="Tên đề tài"
                        FontSize="18"
                        FontWeight="Medium"
                        Foreground="White"
                        VerticalAlignment="Center" Grid.ColumnSpan="3"/>

                    <TextBlock Grid.Row="0" Grid.Column="1"
                        Text="Giảng viên"
                        FontSize="18"
                        FontWeight="Medium"
                        Foreground="White"
                        VerticalAlignment="Center" Grid.ColumnSpan="3"/>

                    <TextBlock Grid.Row="0" Grid.Column="2"
                        Text="Thời gian"
                        FontSize="18"
                        FontWeight="Medium"
                        Foreground="White"
                        VerticalAlignment="Center" Grid.ColumnSpan="3"/>

                    <TextBlock Grid.Row="0" Grid.Column="4"
                    Text="Trạng thái"
                    FontSize="18"
                    FontWeight="Medium"
                    Foreground="White"
                    VerticalAlignment="Center" Grid.ColumnSpan="3"/>        
                </Grid>
            </Grid>
            
        </Border>

    </Grid>
</UserControl>
