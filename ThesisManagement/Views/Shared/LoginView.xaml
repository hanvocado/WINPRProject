    <Border>
        <StackPanel>
            <customControls:PopupControlBar Height="25" />
            <Border Padding="20 10 20 5">

                <StackPanel Grid.Row="1" Orientation="Vertical">
                    <!--<Image Source="/Resources/Images/logo.png" Height="60" />-->
                    <TextBlock Text="QUẢN LÝ LUẬN VĂN"
                           Foreground="{StaticResource primaryBrush}"
                           FontSize="14"
                                Margin="0 0 0 20"
                           FontWeight="Medium"
                           HorizontalAlignment="Center"/>

                    <TextBlock Text="Email" Style="{StaticResource label}" />
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             Padding="10 5 5 5"
                             Height="40"
                             Margin="0 0 0 10">

                    </TextBox>

                    <TextBlock Text="Mật khẩu" Style="{StaticResource label}" />
                    <customControls:BindablePasswordBox Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Height="40">

                    </customControls:BindablePasswordBox>

                    <hc:LoadingCircle Margin="0 10 0 0" Height="25" 
                                      Visibility="{Binding LoadingVisibility, UpdateSourceTrigger=PropertyChanged}"
                                      IsRunning="{Binding IsLoading, UpdateSourceTrigger=PropertyChanged}" />
                    
                    <customControls:ControlButton DefaultColor="{StaticResource primaryBrush}"
                                              HoverColor="{StaticResource secondaryBrush}"
                                              Command="{Binding LoginCommand}"
                                              Width="110" Margin="0 5 0 0"
                                              IsDefault="True">
                        <customControls:ControlButton.Content>
                            <TextBlock Text="Đăng nhập" Style="{StaticResource btnContent}"/>
                        </customControls:ControlButton.Content>
                    </customControls:ControlButton>

                    <TextBlock Style="{StaticResource errorText}" Margin="0 15 5 0" HorizontalAlignment="Center"
                                Text="{Binding ErrorMessage}" />

                    <!--<TextBlock Text="Đăng nhập bắng tài khoản google" Style="{StaticResource label}" HorizontalAlignment="Center" Margin="0 30 0 10"/>
