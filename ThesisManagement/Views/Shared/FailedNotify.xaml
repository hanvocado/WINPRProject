<Border x:Class="ThesisManagement.Views.Shared.FailedNotify"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Background="White"
        BorderThickness="0.5"
        BorderBrush="{DynamicResource DangerBrush}"
        Padding="10 5"
        MinWidth="220"
        CornerRadius="8">
    <StackPanel Orientation="Horizontal">
        <fa:IconImage Icon="CircleExclamation" Foreground="{StaticResource DangerBrush}" Height="20" Margin="0 0 10 0" />
        <TextBlock x:Name="txtMessage" Text="message" FontWeight="Medium" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0 0 0 2"/>
    </StackPanel>
</Border>