<UserControl x:Class="ThesisManagement.CustomControls.TemplateButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThesisManagement.CustomControls"
             x:Name="root"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Button Style="{StaticResource btn}"
            Width="{Binding ButtonWidth, ElementName=root}">
        <ContentControl Content="{Binding Title, ElementName=root}" />
    </Button>
</UserControl>
