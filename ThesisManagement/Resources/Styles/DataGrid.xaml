<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:customControls="clr-namespace:ThesisManagement.CustomControls">

    <Style x:Key="columnHeader" TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="white"/>
        <Setter Property="Padding" Value="10,0,0,10"/>
        <Setter Property="FontFamily" Value="Montserrat"/>
        <Setter Property="FontSize" Value="15"/>
    </Style>

    <Style TargetType="{x:Type ListViewItem}">
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#EFEFEF" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <ControlTemplate x:Key="lvHeader" TargetType="GridViewColumnHeader">
        <Grid Background="#6ccb5f" Height="40">
            <TextBlock Background="#6ccb5f" Foreground="White" Padding="10 0"
                       Style="{StaticResource label}"
                       Text="{TemplateBinding Tag}" VerticalAlignment="Center" />
            <Thumb x:Name="PART_HeaderGripper" HorizontalAlignment="Right" Margin="0" Width="1"/>
        </Grid>
    </ControlTemplate>

    <Style TargetType="{x:Type GridViewColumnHeader}">
        <Setter Property="Foreground" Value="DarkGray"/>
        <Setter Property="Background" Value="#EFEFEF"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#EFEFEF"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="itemContainer" TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource {x:Type ListViewItem}}">
        <Style.Resources>
            <customControls:StringNullOrEmptyConverter x:Key="StringNullOrEmptyConverter"/>
        </Style.Resources>

        <Style.Triggers>
            <DataTrigger Binding="{Binding StudentId, Converter={StaticResource StringNullOrEmptyConverter}}"
                                         Value="False">
                <Setter Property="Background" Value="Yellow" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
    