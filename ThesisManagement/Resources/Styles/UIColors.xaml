<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="primary">#326cf3</Color>
    <Color x:Key="secondary">#2755c0</Color>

    <SolidColorBrush x:Key="primaryBrush">#326cf3</SolidColorBrush>
    <SolidColorBrush x:Key="secondaryBrush">#2755c0</SolidColorBrush>

    <SolidColorBrush x:Key="danger" Color="#b10000" />
    <SolidColorBrush x:Key="dangerHover" Color="#d70000" />
    <SolidColorBrush x:Key="warning" Color="#ffc107" />
    <SolidColorBrush x:Key="warningHover" Color="#ffca2c" />
    <SolidColorBrush x:Key="success" Color="#157347" />
    <SolidColorBrush x:Key="successHover" Color="#198754" />

    <SolidColorBrush x:Key="titleColor" Color = "#BCBEE0" />
    <SolidColorBrush x:Key="plainTextColor" Color = "#F1F1F1" />


    <LinearGradientBrush x:Key="cs_Backgroud" StartPoint="0,0" EndPoint="0,5">
        <GradientStop Color="White" Offset="0.0"/>
        <GradientStop Color="#283593" Offset="0.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="cs_PopupBackgroud" StartPoint="0,0" EndPoint="0,5">
        <GradientStop Color="#FF2F84AC " Offset="0.0"/>
        <GradientStop Color="#FF97D5F2" Offset="0.5"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="cs_BackgroudLayer" Color="#283593" Opacity="0.2"/>

    <SolidColorBrush x:Key="cs_BorderBrushLayer" Color="#283593"/>
    
</ResourceDictionary>